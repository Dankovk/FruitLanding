{
    "path": {
        "font": {
            "src": "src/fonts",
            "dest": "dist/fonts"
        },
        "html": {
            "src": "src",
            "dest": "dist",
            "partials": "./src/partials"
        },
        "image": {
            "src": "src/images",
            "dest": "dist/images"
        },
        "script": {
            "src": "src/scripts",
            "dest": "dist/scripts",
            "vendor": "src/scripts/vendor"
        },
        "sprite": {
            "src": "src/sprites",
            "dest": "dist/images"
        },
        "style": {
            "src": "src/styles",
            "dest": "dist/styles",
            "vendor": "src/styles/vendor"
        },
        "misc": {
            "src": "src",
            "dest": "dist",
            "files": [
                "favicon.ico",

                "favicon.png",
                "favicon-+([0-9])x+([0-9]).png",

                "apple-touch-icon.png",
                "apple-touch-icon-precomposed.png",
                "apple-touch-icon-+([0-9])x+([0-9]).png",

                "mstile.png",
                "mstile-+([0-9])x+([0-9]).png",

                "browserconfig.xml",
                "crossdomain.xml",

                "robots.txt",
                "humans.txt"
            ]
        },
        "http": "/dist/"
    },
    "server": {
        "port": 9000
    },
    "partials": {
        "prefix": "<!-- partial:",
        "suffix": " -->",
        "context": {
            "compileJs": false
        }
    }
}
